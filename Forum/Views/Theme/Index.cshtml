<h2>@ViewData["Title"]</h2>
@model List<Theme>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Theme</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var theme in Model)
        {
            <tr>
                <td>@theme.id</td>
                <td>@theme.titre</td>
                <td>
                    <a asp-action="Edit" asp-controller="Theme" asp-route-id="@theme.id">Edit</a>
                    <form asp-action="Delete" asp-controller="Theme" asp-route-id="@theme.id" method="post" onsubmit="return confirm('Are you sure you want to delete this theme?');">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
